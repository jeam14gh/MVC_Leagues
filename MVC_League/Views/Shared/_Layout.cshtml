<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Campeonatos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ligas", "Index", "League")</li>
                    <li>@Html.ActionLink("Equipos", "Index", "Team")</li>
                    <li>@Html.ActionLink("Resultados", "Create", "Result")</li>
                    <li>@Html.ActionLink("Fecha Jugadas", "Fixtures", "Result")</li>
                    <li>@Html.ActionLink("API", "Competitions", "Result")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @*<script src="~/Scripts/FileSaver.js"></script>*@
    
    <script type="text/javascript">
        var
            _matches = [],
            _fixture = null,
            _nFixture = null,
            _season = null,
            _leagueId = null,
            _teams,
            _leagues,
            // Serie A, Bundesliga, Premier League, La Liga, Ligue 1
            _competitionsId = [2019, 2002, 2021, 2014, 2015],
            _leaguesApi;

        $.getJSON("/Home/GetLeaguesTeams").
        done((data) => {
            _teams = data.Teams;
            _leagues = data.Leagues;
        }).fail((jqxhr, textStatus, error) => {
            var err = textStatus + ", " + error;
            alert("Error al obtener equipos y ligas" + err);
        });

        $.ajax({
            type: "GET",
            url: "http://api.football-data.org/v2/competitions",
            headers: { "X-Auth-Token": "a022e95130904762a260dd800dad83bd" },
            success: function (data) {
                _leaguesApi = data.competitions.filter(f=> {
                    if (_competitionsId.includes(f.id))
                        return f;
                });
            }
        });

        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/FileSaver.js")
    @RenderSection("scripts", required: false)
    <!--Scripts de la aplicacion-->
    @RenderSection("applicationScripts", required: false)
</body>
</html>
